<h1>Listing minds</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @minds.each do |mind| %>
      <tr>
        <td><%= mind.question %></td>
        <td><%= mind.text %></td>
        <td><%= mind.user %></td>
        <td><%= link_to 'Show', mind %></td>
        <td><%= link_to 'Edit', edit_mind_path(mind) %></td>
        <td><%= link_to 'Destroy', mind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

